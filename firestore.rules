rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users collection - secure user data
    // Only the authenticated user can read/write their own document
    match /users/{userId} {
      // Only the user themselves can read their own document
      allow read: if request.auth.uid == userId;
      
      // Allow creating a new user document
      allow create: if request.auth.uid == userId;
      
      // Allow updating/merging user data
      allow update: if request.auth.uid == userId;
      
      // Explicitly allow write (create + update)
      allow write: if request.auth.uid == userId;
    }
  }
}
